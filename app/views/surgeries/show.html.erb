<h1> <%= @surgery.title %> </h1>

<h3> Operating Room to be used: <%= @surgery.o_r %> </h3>

<section class='same-day-surgeries'>
  <h3> Other surgeries happening this day of the week: </h3>
  <%= @surgery.same_day_surgeries(@surgery.weekday) %>
</section>

<h3> Doctors: </h3>
<% @surgery.doctors.each do |doctor| %>
  <%= doctor.name %>
<% end %>

<h3> Add a Doctor to this Surgery </h3>

<%= form_tag "/surgeries/#{@surgery.id}", method: :post do %>

<%= label_tag :name %>
<%= text_field_tag :name %>
<%= submit_tag "Submit" %>
<% end %>
